@using DAL.Models.General
@model Player
@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    body {
        background-image: url('/img/amiral_batti.png');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 0;
    }

    .login-card {
        max-width: 400px;
        width: 100%;
        padding: 40px;
        border-radius: 10px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card-title-icon {
        font-size: 2.5rem;
        color: #e54b65;
        margin-bottom: 10px;
        display: block;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
    }

    .btn-danger {
        background-color: #c73248;
        border-color: #c73248;
        padding: 12px 25px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #a82a3b;
            border-color: #a82a3b;
        }

    .card-title-text {
        color: #343a40 !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .register-link {
        text-align: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #dee2e6;
    }

        .register-link a {
            color: #c73248;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
        }

            .register-link a:hover {
                color: #a82a3b;
                text-decoration: underline;
            }
</style>

<div class="container d-flex align-items-center justify-content-center h-100">
    <div class="login-card">
        <div class="text-center">
            <span class="card-title-icon">🎯</span>
            <h2 class="mb-4 card-title-text">Amiral Battı Giriş</h2>
            <p class="text-muted">Oyuna başlamak için bilgilerinizi girin.</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Kullanıcı Adı:</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Kullanıcı adınızı girin" required />
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                <label for="password" class="form-label">Şifre:</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Şifrenizi girin" required />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-danger btn-lg">
                    Oyna!
                </button>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <p class="text-danger mt-3 text-center"><strong>Hata:</strong> @ViewBag.Error</p>
        }

        <div class="register-link">
            Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a>
        </div>
    </div>
</div>