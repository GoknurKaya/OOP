@using DAL.Models.General
@model Player
@{
    ViewData["Title"] = "İstatistiklerim";
    var recentGames = ViewBag.RecentGames as List<GameSession>;
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .stats-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .stats-header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease-out;
    }

    .stats-title {
        font-size: 3rem;
        font-weight: bold;
        color: white;
        text-shadow: 3px 3px 6px rgba(0,0,0,0.3);
        margin-bottom: 10px;
    }

    .stats-subtitle {
        font-size: 1.5rem;
        color: rgba(255,255,255,0.9);
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    /* Ana İstatistik Kartları */
    .stats-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.4);
        animation: fadeIn 0.8s ease-out;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .stat-card {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        backdrop-filter: blur(10px);
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 2px solid rgba(255,255,255,0.5);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .stat-card.highlight {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

    .stat-label {
        font-size: 1rem;
        opacity: 0.9;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .stat-value {
        font-size: 3rem;
        font-weight: bold;
    }

    .stat-card.highlight .stat-label,
    .stat-card.highlight .stat-value {
        color: white;
    }

    /* Oyun Geçmişi Bölümü */
    .game-history {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.4);
        animation: fadeIn 1s ease-out;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 25px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 2px;
        border-bottom: 3px solid #667eea;
        padding-bottom: 15px;
    }

    .game-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .game-item {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 15px;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s;
        border: 2px solid transparent;
    }

        .game-item:hover {
            transform: translateX(10px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            border-color: #667eea;
        }

        .game-item.won {
            border-left: 5px solid #4caf50;
            background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
        }

        .game-item.lost {
            border-left: 5px solid #f44336;
            background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
        }

    .game-info {
        flex: 1;
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .game-result {
        font-size: 2.5rem;
        font-weight: bold;
        min-width: 80px;
        text-align: center;
    }

    .game-details {
        flex: 1;
    }

    .game-status {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .game-date {
        font-size: 0.9rem;
        color: #666;
    }

    .game-stats {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .game-stat-item {
        background: rgba(255,255,255,0.7);
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        white-space: nowrap;
    }

    .no-games {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

    .no-games-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .no-games-text {
        font-size: 1.3rem;
        color: #999;
    }

    /* Butonlar */
    .btn-container {
        text-align: center;
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeInUp 1s ease-out;
    }

    .btn-custom {
        padding: 15px 35px;
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.3);
        text-decoration: none;
        display: inline-block;
    }

        .btn-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.4);
        }

    .btn-success {
        background: linear-gradient(135deg, #4caf50 0%, #81c784 100%);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }



    .game-info {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }

    .game-stats {
        flex-direction: column;
        gap: 10px;
    }

    .stat-value {
        font-size: 2rem;
    }

    }
</style>

<div class="stats-wrapper">
    <div class="stats-header">
        <h1 class="stats-title">📊 İSTATİSTİKLER</h1>
        <p class="stats-subtitle">@Model.Username'in Performansı</p>
    </div>

    <!-- Genel İstatistikler -->
    <div class="stats-container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">🎮 Toplam Oyun</div>
                <div class="stat-value">@Model.TotalGamesPlayed</div>
            </div>

            <div class="stat-card highlight">
                <div class="stat-label">🏆 Toplam Galibiyet</div>
                <div class="stat-value">@Model.TotalWins</div>
            </div>

            <div class="stat-card">
                <div class="stat-label">🎯 Toplam Atış</div>
                <div class="stat-value">@Model.TotalShotsFired</div>
            </div>

            <div class="stat-card">
                <div class="stat-label">📈 Kazanma Oranı</div>
                <div class="stat-value">@Model.WinRate.ToString("F1")%</div>
            </div>

            <div class="stat-card">
                <div class="stat-label">⚡ Ort. Atış/Galibiyet</div>
                <div class="stat-value">@Model.AverageShotsPerWin.ToString("F1")</div>
            </div>
        </div>
    </div>

    <!-- Oyun Geçmişi -->
    <div class="game-history">
        <h2 class="section-title">🎯 Son Oyunlarım</h2>

        @if (recentGames != null && recentGames.Any())
        {
            <div class="game-list">
                @foreach (var game in recentGames)
                {
                    <div class="game-item @(game.PlayerWon ? "won" : "lost")">
                        <div class="game-info">
                            <div class="game-result">
                                @if (game.PlayerWon)
                                {
                                    <span style="color: #4caf50;">🏆</span>
                                }
                                else
                                {
                                    <span style="color: #f44336;">😞</span>
                                }
                            </div>

                            <div class="game-details">
                                <div class="game-status">
                                    @if (game.PlayerWon)
                                    {
                                        <span style="color: #4caf50;">GALİBİYET</span>
                                    }
                                    else
                                    {
                                        <span style="color: #f44336;">KAYIP</span>
                                    }
                                </div>
                                <div class="game-date">
                                    📅 @game.CreatedAt.ToString("dd MMMM yyyy, HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="game-stats">
                            <div class="game-stat-item">
                                🎯 @game.ShotsFired Atış
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-games">
                <div class="no-games-icon">🎮</div>
                <div class="no-games-text">Henüz tamamlanmış oyun yok.</div>
                <div class="no-games-text">İlk oyununuzu oynayın ve geçmişiniz burada görünsün!</div>
            </div>
        }
    </div>

    <!-- Butonlar -->
    <div class="btn-container">
        <a asp-action="ShipPlacement" class="btn-custom btn-success">🚀 Yeni Oyun Başlat</a>
        <a asp-action="Login" class="btn-custom btn-warning">🔄 Çıkış Yap</a>
    </div>
</div>